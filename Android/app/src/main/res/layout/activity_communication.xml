<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="84dp"
        android:text="SEND MESSAGE"
        android:textColor="@android:color/black"
        android:textSize="@dimen/description_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:background="#F5F5F5"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/msgReceived"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:background="#F5F5F5"
        android:scrollbars="vertical"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendMsgBtn"
        app:layout_constraintVertical_bias="0.29000002" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PREDEFINED FUNCTIONS"
        android:textColor="@android:color/black"
        android:textSize="@dimen/description_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgReceived" />

    <Button
        android:id="@+id/sendMsgBtn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="#071E38"
        android:text="SEND"
        android:textColor="@color/White"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="240dp"
        android:text="MESSAGE RECEIVED"
        android:textColor="@android:color/black"
        android:textSize="@dimen/description_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/msgReceived"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TableLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.22000003">

        <TableRow>

            <Button
                android:id="@+id/fn1Btn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@color/pink"
                android:text="FUNCTION 1"
                android:textColor="@color/White"
                android:textSize="@dimen/btn_text_size" />

            <Button
                android:id="@+id/fn2Btn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginLeft="38dp"
                android:background="@color/pink"
                android:text="FUNCTION 2"
                android:textColor="@color/White"
                android:textSize="@dimen/btn_text_size"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/msgUpdateBtn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginLeft="38dp"
                android:background="#071E38"
                android:text="RECONFIGURE"
                android:textColor="@color/White"
                android:textSize="@dimen/btn_text_size" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>